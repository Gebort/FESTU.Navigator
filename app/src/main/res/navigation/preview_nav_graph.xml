<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preview_nav_graph"
    app:startDestination="@id/orientationFragment">

    <include app:graph="@navigation/initialization_graph" />
    <include app:graph="@navigation/confirmer_graph" />
    <include app:graph="@navigation/router_graph" />
    <include app:graph="@navigation/search_graph" />
    <include app:graph="@navigation/search_graph" />


    <fragment
        android:id="@+id/scannerFragment"
        android:name="com.example.festunavigator.presentation.scanner.ScannerFragment"
        android:label="fragment_scanner"
        tools:layout="@layout/fragment_scanner" >
        <action
            android:id="@+id/action_scannerFragment_to_confirmFragment"
            app:destination="@id/confirmFragment"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_down"
            app:popUpToInclusive="false" />
        <argument
            android:name="scanType"
            app:argType="integer"
            android:defaultValue="0" />
        <deepLink
            app:uri="android-app://com.gerbort.app/scanner_fragment/{scanType}" />
    </fragment>
    <fragment
        android:id="@+id/confirmFragment"
        android:name="com.example.festunavigator.presentation.confirmer.ConfirmFragment"
        android:label="fragment_confirm"
        tools:layout="@layout/fragment_confirm" >
        <action
            android:id="@+id/action_confirmFragment_to_routerFragment"
            app:destination="@id/routerFragment"
            app:popUpTo="@id/preview_nav_graph"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down"
            app:popUpToInclusive="true" />
        <argument android:name="confirmType"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/routerFragment"
        android:name="com.example.festunavigator.presentation.router.RouterFragment"
        android:label="fragment_router"
        tools:layout="@layout/fragment_router" >
        <action
            android:id="@+id/action_routerFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.festunavigator.presentation.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="changeType"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_scannerFragment"
        app:destination="@id/scannerFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@anim/slide_down"
        app:popEnterAnim="@anim/slide_up"
        app:popExitAnim="@android:anim/fade_out"
        app:popUpTo="@id/routerFragment" />
    <fragment
        android:id="@+id/orientationFragment"
        android:name="com.gerbort.initialization.OrientationFragment"
        android:label="fragment_orientation"
        tools:layout="@layout/fragment_orientation" >
        <action
            android:id="@+id/action_orientationFragment_to_scannerFragment"
            app:destination="@id/scannerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <action
        android:id="@+id/action_global_orientationFragment"
        app:destination="@id/orientationFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out" />
</navigation>